<% include ./partials/header.ejs %> 
<div class="w-full h-screen bg-zinc-800 px-10 py-5 text-white  ">  
<h1 class="text-xl"> Create a new Post</h1> 
<hr class=" opacity-10 mt-2"> 
<form action="/createpost" method="post" enctype="multipart/form-data"> 
    <input class="block w-1/3 px-3 py-2 bg-zinc-800 rounded-md mt-3  " type="file" name="postimage">   
    <input class="block w-1/3 px-3 py-2 text-black border-2 bg-zinc-800 rounded-lg text-white mt-2" type="text" placeholder="Title" name="title">  
    <textarea class="block w-1/3 px-3 text-black py-2 border-2 h-60 bg-zinc-800 text-white rounded-lg mt-2" type="text" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2  bg-red-600 font-semibold rounded-lg mt-2" type="submit" value="Create Post">
</form>
</div>

